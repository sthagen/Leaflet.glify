{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es2015",
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
